{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2019",
		"outDir": "out",
		"lib": [
			"ES2019"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true, /* enable all strict type-checking options */
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true
	},
	"exclude": [
		"node_modules",
		".vscode-test",
		"webview-ui"
	]
}
